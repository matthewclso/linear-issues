{
  "name": "linear-issues",
  "displayName": "linear-issues",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:linearIssues",
    "onCommand:linear-issues.refreshAllIssues",
    "onCommand:linear-issues.refreshMyIssues"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "linear-issues.refreshAllIssues",
        "title": "Linear Issues: Refresh All Issues",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "linear-issues.refreshMyIssues",
        "title": "Linear Issues: Refresh My Issues",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "linearIssues",
          "title": "Linear Issues",
          "icon": "resources/linear.svg"
        }
      ]
    },
    "views": {
      "linearIssues": [
        {
          "id": "allIssues",
          "name": "All Issues",
          "contextualTitle": "All Issues"
        },
        {
          "id": "myIssues",
          "name": "My Issues",
          "contextualTitle": "My Issues"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "linear-issues.refreshAllIssues",
          "when": "view == allIssues",
          "group": "navigation"
        },
        {
          "command": "linear-issues.refreshMyIssues",
          "when": "view == myIssues",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "extensionDependencies": [
    "linear.linear-connect"
  ],
  "dependencies": {
    "@linear/import": "^2.1.1",
    "@linear/sdk": "^1.22.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  }
}
